<% if @product.present? %>
  <div class="max-w-2xl mx-auto mt-8 bg-white shadow-md rounded-lg overflow-hidden">
    <div class="px-6 py-4">
      <h1 class="text-2xl font-bold text-gray-800 mb-4">Product Details</h1>

      <div>
          <span class="font-semibold text-gray-600">ID:</span>
          <span class="ml-2 text-gray-800"><%= @product.id %></span>
        </div>
      
      <div class="grid grid-cols-2 gap-4">
        <div class="col-span-2">
          <span class="font-semibold text-gray-600">Name:</span>
          <span class="ml-2 text-gray-800"><%= @product.name %></span>
        </div>
        
        <div class="col-span-2">
          <span class="font-semibold text-gray-600">Description:</span>
          <p class="mt-1 text-gray-800"><%= @product.description %></p>
        </div>
        
        <div>
          <span class="font-semibold text-gray-600">Price:</span>
          <span class="ml-2 text-gray-800"><%= number_to_currency(@product.price) %></span>
        </div>
        
        <div>
          <span class="font-semibold text-gray-600">Category ID:</span>
          <span class="ml-2 text-gray-800"><%= @product.category_id %></span>
        </div>
        
        <div>
          <span class="font-semibold text-gray-600">Status:</span>
          <span class="ml-2 <%= @product.active? ? 'text-green-600' : 'text-red-600' %>">
            <%= @product.active? ? 'Active' : 'Inactive' %>
          </span>
        </div>

        <% if @product.image.attached? %>
          <%= image_tag @product.image.variant(resize_to_limit: [100, 100]), class: "product-image" %>
        <% else %>
          <p>No image attached</p>
        <% end %>
        
      </div>
    </div>
    
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <%= link_to "Edit", edit_admin_product_path(@product), class: "inline-block bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to List", admin_products_path, class: "inline-block bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded ml-2" %>
    </div>
  </div>
<% else %>
  <p>Product not found.</p>
  <%= link_to "Back to Product list", admin_products_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
<% end %>
